rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ideas コレクションへのアクセス
    match /ideas/{ideaId} {
      // 認証されたユーザー(Cloud Run のサービスアカウント含む)からの読み取りと作成を許可
      // 本番では request.auth.uid による制御やデータのバリデーションを追加すべき
      allow read, create: if request.auth != null;
      // 更新、削除は今は許可しない
      allow update, delete: if false;
    }
    // 他のパスはアクセス拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
